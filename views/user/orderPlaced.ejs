<%- include('./layouts/header.ejs') -%>

    <%- include('./layouts/navbar.ejs') -%>



        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h5>Order Placed!!</h5>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="container">
            <div class="row">
                <div class="col-lg-12 mt-5">
                    <div class="mb-4" style="text-align: center;">
                        <h3 style="color: green;">Congrats !! , Your order has been placed successfully</h3>
                    </div>

                    <% if (order && order.items) { %>
                        <div class="shopping-cart">
                            <table class="cart-table">
                                <thead class="table-header">
                                    <tr>
                                        <th class="product-header">Product</th>
                                        <!-- <th class="quantity-header">Quantity</th> -->
                                        <th class="total-header">Total</th>
                                    </tr>
                                </thead>



                                <tbody>
                                    <% order.items.forEach((product)=> { %>
                                        <tr class="cart-item">
                                            <td class="product">
                                                <div class="product-image">
                                                    <img src="/images/<%= product.product_Id.image[0] %>"
                                                        alt="Product Image">
                                                </div>
                                                <div class="product-details">
                                                    <h6>
                                                        <%= product.product_Id.name %>
                                                    </h6>
                                                    <p>₹<%= product.product_Id.price %>
                                                    </p>
                                                </div>
                                            </td>

                                            <td class="quantity">
                                                <div class="quantity-input">
                                                    <input type="text" value="<%= product.quantity %>" readonly>
                                                </div>
                                            </td>

                                            <td class="total-price">₹<%= product.totalPrice.toFixed(2) %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } %>


                </div>
            </div>
        </div>



        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="order-card">
                        <div class="order-card-header">
                            <h3>Order Summary</h3>
                        </div>
                        <div class="order-card-body" id="printThisDiv">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Details</th>
                                        <th scope="col">Info</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Order ID:</td>
                                        <td>
                                            <%= order._id %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>User Name:</td>
                                        <td>
                                            <%= order.userName %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Address Details:</td>
                                        <td>
                                            <%= order.deliveryAddress %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Payment:</td>
                                        <td>
                                            <%= order.payment %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Total Price:</td>
                                        <td>₹ <%= order.totalAmount %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Date:</td>
                                        <td>
                                            <%= order.date %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Delivery by:</td>

                                        <td>
                                            <%= order.expectedDelivery.toLocaleDateString('en-US', { year: 'numeric' ,
                                                month: 'short' , day: '2-digit' }).replace(/\//g,'-') %>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div>
                            <div>
                                <h5>Thankyou for purchasing with us</h5>
                            </div>
                            <div class="order-card-footer">
                                <a href="/shop">Continue Shopping</a>
                            </div>
                            <div>
                                <button type="button" onclick="downloadPDF('printThisDiv')" class="btn btn-primary mt-3">
                                    Print
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>





        <%- include('./layouts/footerNavbar.ejs') -%>

            <%- include('./layouts/footer.ejs') -%>


                <script>
                    function calculateTotal(items) {
                        let total = 0;
                        items.forEach((product) => {
                            total += product.totalPrice;
                        });
                        return total;
                    }

                    function downloadPDF(divName) {
                        const printContents = document.getElementById(divName).innerHTML;
                        const originalContents = document.body.innerHTML;
                        document.body.innerHTML = printContents;
                        window.print();
                        document.body.innerHTML = originalContents;
                    }
                </script>