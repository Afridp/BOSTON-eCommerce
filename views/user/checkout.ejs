                                                <!-- Checkout -->
                                                <div class="card shadow-0 border mb-4" id="addressDetails">
                                                    <div class="card-body">
                                                        <h5 class="card-title">Select address</h5>
                                                        <div class="d-flex justify-content-end">
                                                            <a href="/add-addresss" class="btn btn-primary btn-sm">Add
                                                                New
                                                                Address</a>
                                                        </div>
                                                        <hr />
