                                                                    <div id="addrId">
                                                                        <div class="row">
                                                                            <div class="col-sm-1">
                                                                                <div class="form-check">
                                                                                    <input class="form-check-input"
                                                                                        type="radio"
                                                                                        name="selectedAddress" value=" <%= address.name %>,
                                                                <%= address.housename %>, <%= address.city %>, <%= address.pincode %> 
                                                                <%= address.phone %>" id="address" required>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-sm-8">
                                                                                <p class="text-muted mb-0">
                                                                                    <%= address.name %>
                                                                                        
                                                                                </p>
                                                                                <p class="text-muted mb-0">
                                                                                    <%= address.phone %>
                                                                                </p>
                                                                                <p class="text-muted mb-0">
                                                                                    <%= address.housename %>, <%=
                                                                                            address.city %>, <%=
                                                                                                address.pincode %>
                                                                                </p>
                                                                            </div>
                                                                            <div class="col-sm-3">
                                                                                <a href="/check-edit-address?addressId=<%= address._id %>"
                                                                                    class="btn btn-primary btn-sm mr-2">Edit</a>
                                                                                <!-- <a href="#"
                                                                                    onclick="handleDeleteAddress('<%= address._id %>')"
                                                                                    class="btn btn-danger btn-sm">Remove</a> -->
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <hr />
                                                                    <% } %>
                                                                        <% }) %>
                                                                            <% } else { %>
