        <section class="bg-white">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-lg-12 main-div">
                        <% if (cart && cart.items) { %>
                            <div class="shopping__cart__table">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Total</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% cart.items.forEach((cart)=> { %>
                                            <tr class="cart-item">
                                                <td class="product__cart__item">
                                                    <div class="product__cart__item__pic">
                                                        <img src="/Images/<%= cart.product_Id.image[1] %>"
                                                            alt="" style="height: 100px; width: 100px;">
                                                    </div>
                                                    <div class="product__cart__item__text">
                                                        <h6>
                                                            <%= cart.product_Id.name %>
                                                        </h6>
                                                        <h5>₹<%= cart.product_Id.price %>
                                                        </h5>
                                                    </div>
                                                </td>
                                                <td class="quantity__item">
                                                    <div class="quantity">
                                                        <div class="pro-qty-2">
                                                            <input type="text" value="<%= cart.quantity %>" readonly>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="cart__price">₹ <%= cart.totalPrice %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="card mb-5">
                            <div class="card-body">
                                <% if (coupon) { %>
                                    <h3 class="mt-3 mb-5 mx-3">
                                        "<%= coupon %>" Coupon Applied
                                            <a href="#" onclick="remove()" class="text-danger">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                    </h3>
                                    <input type="hidden" name="code" id="code" value="<%= coupon %>">
                                    <% } else { %>
                                        <div class="cart__discount">
                                            <h6>Discount codes</h6>
                                            <form>
                                                <input type="text" placeholder="Coupon code" name="coupon">
                                                <button type="submit">Apply</button>
                                            </form>
                                            <input type="hidden" name="code" id="code" value="<%= coupon %>">
                                        </div>
                                        <!-- <div class="text-center">
                                            <button type="button" class="custom-btn mb-4" data-bs-toggle="modal"
                                                data-bs-target="#exampleModal">
                                                Coupons for you
                                            </button>
                                        </div> -->
                                        <% } %>
